{%  if (app.user is not null and (app.user.roles[0] == 'ROLE_LOUEUR'))  %}
    <!-- Modal -->
    <div class="modal fade" id="deleteModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"><strong>Supprimer ?</strong></h4>
                </div>
                <div class="modal-body">
                    <form class="form" action="{{ url('admin_delete') }}" role="form" method="post">
                        <p class="alert bg-success">Etes vous sur de vouloir supprimer cette oeuvre?</p>
                        <div class="form-actions">
                            <a class="btn btn-danger" data-dismiss="modal">Non</a>
                            <input name = "delete" type="submit" class="btn btn_delete" value="Oui">
                            <input type="hidden" name="oeuvre_id" value="">
                            <input type="hidden" name="_token" value="{{ csrf_token('deleteModal') }}">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
{% endif %}